<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="helloWorldSetter" class="gau.nau.HelloWorld">
        <property name="message" value="Inject by Setter" />
    </bean>

    <bean id="helloWorldConstructor" class="gau.nau.HelloWorld">
        <constructor-arg value="Inject by Contructor" type="String" />
    </bean>

</beans>